<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityProducts"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#BF000000">

        <TextView
            android:id="@+id/textBackButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/abc_vector_test"
            android:padding="6dp" />



            <SearchView
                android:id="@+id/search_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/textBackButton"
                android:layout_toRightOf="@+id/textBackButton"
                android:paddingLeft="270dp"
                android:focusable="false"
                android:iconifiedByDefault="true"
                android:queryHint="Search">

            </SearchView>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:id="@+id/imageCart"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/search_view"
            android:layout_toRightOf="@+id/search_view"
            android:src="@drawable/ic_shopping_cart">

        </ImageView>



    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageError"
        android:visibility="gone"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_below="@+id/relativeLayout"
        android:src="@drawable/backgrounderror">

    </ImageView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerItem"
        android:layout_below="@+id/relativeLayout">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>